{
  "name": "claudeforge",
  "version": "1.0.0",
  "description": "ClaudeForge - MCP Server orchestration platform with web-based management",
  "author": "Jeff Pegg <jpeggdev@gmail.com>",
  "homepage": "https://claudeforge.com",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run ui:build",
    "build:fast": "tsc --incremental",
    "build:watch": "tsc --watch --incremental",
    "start": "node dist/index.js",
    "start:fast": "tsx src/index.ts",
    "dev": "nodemon src/index.ts",
    "dev:full": "concurrently \"npm run build:watch\" \"nodemon dist/index.js\"",
    "restart": "npm run build:fast && systemctl --user restart claudeforge",
    "restart:fast": "systemctl --user restart claudeforge",
    "reload": "systemctl --user reload-or-restart claudeforge",
    "test": "jest",
    "ui:dev": "cd claudeforge-ui && npm run dev",
    "ui:build": "cd claudeforge-ui && npm run build",
    "ui:install": "cd claudeforge-ui && npm install"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eventsource": "^4.0.0",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/eventsource": "^1.1.15",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.13",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "concurrently": "^9.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
